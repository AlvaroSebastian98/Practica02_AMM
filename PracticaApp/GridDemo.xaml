<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PracticaApp.GridDemo">
    <ContentPage.Content>
        <Grid x:Name="controlGrid" RowSpacing="1" ColumnSpacing="1">
           <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="200" />
           </Grid.RowDefinitions>
           <Grid.ColumnDefinitions>
               <ColumnDefinition Width="Auto" />
               <ColumnDefinition Width="*" />
           </Grid.ColumnDefinitions>
           <Button Text="B1" Grid.Row="0" Grid.Column="0" />
           <Button Text="B2" Grid.Row="0" Grid.Column="1" />
           <Button Text="B3" Grid.Row="1" Grid.Column="0" />
           <Button Text="B4" Grid.Row="1" Grid.Column="1" />
           <Button Text="B5" Grid.Row="2" Grid.Column="0" />
           <Button Text="B6" Grid.Row="2" Grid.Column="1" /> 
        </Grid>
    </ContentPage.Content>
</ContentPage>
